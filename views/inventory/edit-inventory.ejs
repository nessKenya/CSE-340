<h1><%= title %></h1>

<!-- display errors -->

<% if (errors) { %>
    <ul class="warningDetails">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
<form class="input-box" id="updateForm" action="/inv/update" method="post">
  <label for="classificationList">Classification</label>
  <%- classificationSelect %>
  <label>Make<input type="text" name="inv_make" pattern="^[A-Za-z0-9 ]+$" minlength="3" placeholder="min 3 characters"  value="<%= locals.inv_make %>" required></label>
  <label>Model<input type="text" name="inv_model" pattern="^[A-Za-z0-9 ]+$" minlength="3" placeholder="min 3 characters"  value="<%= locals.inv_model %>" required></label>
  <label>Year<input type="text" name="inv_year" pattern="^\d+$"  value="<%= locals.inv_year %>" required></label>
  <label for="description">
    Description
  </label>
    <textarea id="description"
      name="inv_description" 
      maxlength="250"
      rows="7"
      required
      >
      <%- locals.inv_description%>
    </textarea>
  <label>Price<input type="text" name="inv_price" pattern="^[0-9]+$"  value="<%= locals.inv_price %>" required></label>
  <label>Miles<input type="text" name="inv_miles" pattern="^[0-9]+$"  value="<%= locals.inv_miles %>" required></label>
  <label>Color<input type="text" name="inv_color" pattern="^[A-Za-z0-9]+$"  value="<%= locals.inv_color %>" required></label>
  <label>Image<input type="text" name="inv_image" value="/images/vehicles/no-image.png" required></label>
  <label>Thumbnail<input type="text" name="inv_thumbnail" value="/images/vehicles/no-image-tn.png" required></label>
  <button type="submit" disabled>Update Vehicle</button>
  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
  <% } %>>
</form>
<script src="../../js/inv-update.js"></script>
</div>